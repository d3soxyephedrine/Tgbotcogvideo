# ============================================================================
# Ko2 Bot - Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual values
#
# IMPORTANT: Never commit .env with real credentials!
# ============================================================================

# ----------------------------------------------------------------------------
# REQUIRED: Telegram Bot Configuration
# ----------------------------------------------------------------------------
# Your Telegram bot token from @BotFather
BOT_TOKEN=your_telegram_bot_token_here

# Flask session secret for secure cookie encryption
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET=your_secure_random_string_here

# ----------------------------------------------------------------------------
# REQUIRED: AI Model API Keys
# ----------------------------------------------------------------------------
# Choose at least one AI provider:

# xAI API Key for Grok models
XAI_API_KEY=your_xai_api_key_here

# OpenRouter API Key (supports multiple models including GPT-4, Claude, etc.)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Novita AI API Key (alternative provider)
NOVITA_API_KEY=your_novita_api_key_here

# ----------------------------------------------------------------------------
# OPTIONAL: Video Generation (CogVideoX)
# ----------------------------------------------------------------------------
# API key for CogVideoX video generation service
COGVIDEOX_API_KEY=your_cogvideox_api_key_here

# CogVideoX API endpoint URL
COGVIDEOX_API_URL=https://api.cogvideox.example.com

# ----------------------------------------------------------------------------
# OPTIONAL: Payment Processing (NowPayments)
# ----------------------------------------------------------------------------
# NowPayments API key for crypto payments
NOWPAYMENTS_API_KEY=your_nowpayments_api_key_here

# NowPayments IPN (Instant Payment Notification) secret
NOWPAYMENTS_IPN_SECRET=your_nowpayments_ipn_secret_here

# ----------------------------------------------------------------------------
# OPTIONAL: Admin Features
# ----------------------------------------------------------------------------
# Admin token for privileged operations (export, cleanup)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
ADMIN_EXPORT_TOKEN=your_admin_token_here

# ----------------------------------------------------------------------------
# AI Model Selection
# ----------------------------------------------------------------------------
# Default model to use (can be changed per-user in app)
# Options: grok-2-1212, deepseek/deepseek-chat, gpt-4o, etc.
MODEL=grok-2-1212

# ----------------------------------------------------------------------------
# Server Configuration
# ----------------------------------------------------------------------------
# Port to run the web server on (Replit automatically sets this)
PORT=5000

# Database connection string (Replit automatically provides this)
# Format: postgresql://user:password@host:port/database
# DATABASE_URL is automatically set by Replit PostgreSQL module
# DATABASE_URL=postgresql://username:password@localhost/ko2bot

# ----------------------------------------------------------------------------
# Replit-Specific (Auto-configured, no action needed)
# ----------------------------------------------------------------------------
# These are automatically set by Replit:
# - DATABASE_URL: PostgreSQL connection string
# - REPLIT_DEV_DOMAIN: Development domain
# - REPLIT_DOMAINS: Production domains
# ----------------------------------------------------------------------------
